''' The module for QSPR model of partition coefficient
    between corneocyte (and water) '''

def qspr_Kcc(paras, dat, sig2=1, disp=False):
    ''' Function to build a QSPR model for the partition coefficient in corneocyte'''

    import numpy as np
    import math
    import matplotlib.pyplot as plt

    a = paras[0]
    b = paras[1]
    K_ow = dat[:,0] # partition coefficient octanol -- water
    K_sc = dat[:,1] # partition coefficient stratum corneum -- water
    n_dat = len(K_sc)

    w_pro = 0.77
    w_lip = 0.23
    w_wat = 2.99

    #w_pro = 0.45*0.875; 
    #w_lip = 0.45*0.125; 
    #w_wat = 0.55; 

    rho_pro = 1.37
    v_pro = w_pro/rho_pro
    rho_lip = 0.90
    v_lip = w_lip/rho_lip
    rho_wat = 1.00
    v_wat = w_wat/rho_wat

    v_total = v_pro + v_lip + v_wat
    phi_pro = v_pro / v_total
    phi_lip = v_lip / v_total
    phi_wat = v_wat / v_total

    K_sc_pred = phi_pro*rho_pro/rho_wat* a*np.power(K_ow,b) + phi_lip*rho_lip/rho_wat* np.power(K_ow,0.69) + phi_wat;
    err = np.log10(K_sc) - np.log10(K_sc_pred)
    sse =  np.sum( np.square(err) )

    likelihood = -0.5*n_dat*np.log(sig2) - 0.5*n_dat*np.log(2*math.pi) - 0.5*sse/sig2
    nlh = -likelihood
    print nlh

    if (disp):
        plt.plot( np.log10(K_sc), np.log10(K_sc_pred), 'ro');
        plt.show()
        #refline(1,0);    
        
    return nlh

